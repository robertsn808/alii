# AI Error Monitoring System Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI API CONFIGURATION
# =============================================================================
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=robertsn808
GITHUB_REPO_NAME=alii

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alii-errors

# Email Configuration (SMTP)
EMAIL_FROM=alerts@aliifishmarket.com
EMAIL_TO=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Custom Webhook (optional)
CUSTOM_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# =============================================================================
# AUTO-FIX CONFIGURATION
# =============================================================================
AUTO_FIX_ENABLED=true
AUTO_FIX_CONFIDENCE_THRESHOLD=0.8
MAX_DAILY_PRS=5

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3030

# =============================================================================
# ALII PROJECT SPECIFIC
# =============================================================================
PROJECT_ROOT=../..
LOG_PATHS=../backend/logs/**/*.log,../frontend/.next/**/*.log,/var/log/**/*.log

# Business Context
BUSINESS_NAME=Alii Fish Market
BUSINESS_PHONE=+1-808-555-FISH
BUSINESS_EMAIL=orders@aliifishmarket.com
BUSINESS_HOURS_START=06:00
BUSINESS_HOURS_END=20:00
TIMEZONE=Pacific/Honolulu

# Toast POS Comparison Data
TOAST_ANNUAL_COST=19932
UPP_ANNUAL_COST=13800
ANNUAL_SAVINGS=6132

# Deployment URLs
FRONTEND_URL=https://aliifishmarket.realconnect.online
API_URL=https://alii-api.realconnect.online
UPP_URL=https://upp.realconnect.online
SELLER_URL=https://realconnect.online

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Rate Limiting
RATE_LIMIT_WINDOW=300000
RATE_LIMIT_MAX_ALERTS=10

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret for dashboard authentication (if needed)
JWT_SECRET=your-jwt-secret-here

# API rate limiting
API_RATE_LIMIT=100