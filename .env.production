# Production Environment Variables for Alii Fish Market
# Deploy to: aliifishmarket.realconnect.online

# Domain Configuration
NEXT_PUBLIC_SITE_URL=https://aliifishmarket.realconnect.online
NEXT_PUBLIC_API_URL=https://alii-api.realconnect.online
CORS_ALLOWED_ORIGINS=https://aliifishmarket.realconnect.online,https://realconnect.online,https://upp.realconnect.online

# UPP Integration (connecting to your existing UPP service)
UPP_API_ENDPOINT=https://upp.realconnect.online
UPP_MERCHANT_ID=alii_fish_market_001
UPP_API_KEY=your_upp_api_key_here
NEXT_PUBLIC_UPP_API_URL=https://upp.realconnect.online

# Seller Integration (connecting to your existing seller service)
SELLER_API_ENDPOINT=https://realconnect.online
NEXT_PUBLIC_SELLER_API_URL=https://realconnect.online

# Database Configuration (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database_name
POSTGRES_DB=alii_fish_market
POSTGRES_USER=alii_user
POSTGRES_PASSWORD=secure_password_here

# Stripe Integration (for payment processing)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio SMS Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+18085551234

# Application Configuration
NODE_ENV=production
SPRING_PROFILES_ACTIVE=production
SERVER_PORT=10000
TIME_ZONE=Pacific/Honolulu

# Business Information
BUSINESS_NAME=Alii Fish Market
BUSINESS_PHONE=+1-808-555-FISH
BUSINESS_ADDRESS=123 Aloha Way, Honolulu, HI 96813
BUSINESS_EMAIL=orders@aliifishmarket.com

# Demo Configuration for Buyers
DEMO_MODE=true
DEMO_MENU_ITEMS=true
DEMO_TRANSACTIONS=true
COST_SAVINGS_DISPLAY=true

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here

# AI Error Monitoring Integration
ERROR_MONITOR_ENABLED=true
ERROR_MONITOR_ENDPOINT=https://alii-error-monitor.onrender.com
ERROR_MONITOR_API_KEY=your_error_monitor_api_key

# Frontend Error Monitoring
NEXT_PUBLIC_ERROR_MONITOR_ENABLED=true
NEXT_PUBLIC_ERROR_MONITOR_ENDPOINT=https://alii-error-monitor.onrender.com
NEXT_PUBLIC_ERROR_MONITOR_API_KEY=your_error_monitor_api_key

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
COOKIE_DOMAIN=.realconnect.online